<%- include('layout', { body: '' }) %>
<h2>All Posts</h2>
<ul class="posts">
    <% posts.forEach(post => { %>
        <li>
            <h3 class="post-title"><%= post.title %></h3>
            <p><%= post.content %></p>
            <a href="/edit/<%= post.id %>" class="edit-btn">Edit</a>
            <form action="/delete/<%= post.id %>" method="POST" style="display: inline;">
                <button type="submit" class="delete-btn">Delete</button>
            </form>
        </li>
    <% }) %>
</ul>
